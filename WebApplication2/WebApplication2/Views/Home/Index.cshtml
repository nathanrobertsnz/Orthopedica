@{
    ViewBag.Title = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Orthopedica</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div id="myCarousel" class="carousel slide " data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class=""></li>
            <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="2" class=""></li>
            <li data-target="#myCarousel" data-slide-to="3" class=""></li>
            <li data-target="#myCarousel" data-slide-to="4" class=""></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item">
                <img class="first-slide" src="~/Content/images/slides/slide1.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>
                            We offer foot care for
                            the whole family
                        </h1>
                        <p>
                            Orthopedica has over 37 years experience in Europe and over 17 years experience in New Zealand.
                        </p>
                        <p><a class="btn btn-lg btn-primary" href="~/Views/Home/Index.cshtml" role="button">Contact Us</a></p>
                    </div>
                </div>
            </div>
            <div class="item active">
                <img class="second-slide" src="~/Content/images/slides/slide2.jpg" alt="Second slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Foot aches and Pains</h1>
                        <p>
                            Cured with orthotic inner soles
                        </p>
                        <p><a class="btn btn-lg btn-primary" href="~/Views/Home/Index.cshtml" role="button">Contact Us</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="third-slide" src="~/Content/images/slides/slide3.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Footcare Clinic</h1>
                        <p>
                            We offer footcare for the whole family
                        </p>
                        <p><a class="btn btn-lg btn-primary" href="~/Views/Home/Index.cshtml" role="button">Book Now</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="fourth-slide" src="~/Content/images/slides/slide4.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Make an appointment</h1>
                        <p>
                            Making an appointment is easy, simply fill out registration form below and one of our friendly staff will give you a call ASAP.
                        </p>
                        <p><a class="btn btn-lg btn-primary" href="~/Views/Home/Contact.cshtml" role="button">Have a Question?</a></p>
                    </div>
                </div>
            </div>
            <div class="item">
                <img class="fifth-slide" src="~/Content/images/slides/slide5.jpg" alt="Third slide">
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Dont Suffer.</h1>
                        <p>
                            With over 40 years experience, we have been helping families with there Foot Care problems for Decades. Get in touch with one of our friendly stagg today!
                        </p>
                        <p><a class="btn btn-lg btn-primary" href="#" role="button">Call Now!</a></p>
                    </div>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- /.carousel -->
    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <!-- /.row -->
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-8">
                <h2 class="featurette-heading">Welcome to Orthopedica<span class="text-muted"><br />What are we about?</span></h2>
                <p class="lead">
                    Orthopedica is a private Orthopaedic Clinic specialising in Foot Care and foot wear, our aim is to help with all of your orthopaedic issues.
                    If you or someone you know are suffering with feet, knee, hip, leg or lower back problems problems, please get in touch with us today!.
            </div>
            <div class="col-md-4">
                <img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="~/Content/images/image1.jpg" data-holder-rendered="true">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">

            <div class="col-md-4">
                <img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="~/Content/images/run.jpg" data-holder-rendered="true">
            </div>
            <div class="col-md-8 ">
                <h2 class="featurette-heading">Why choose us? <span class="text-muted">See for yourself.</span></h2>
                <p class="lead">
                    Orthopedica Clinic is an ACC Provider with over 40 years experience in Europe and New Zealand, specialising in orthopaedic foot care and footwear related problems which enhances your health and well being. (we are not Podiatrists)
                    <br />
                    <br />
                    We urge you to call or leave message now to book an appointment!
                    <br />
                    <br />
                    Thank you for taking an interest in our services. Myself and my team are looking forward to seeing you in the near future!
                    <br />
                    <br />
                    Yours faithfully,<br />
                    Mr. George Nelson
                    <br />
                    <br />
                    Managing Director & Owner<br />
                    Dip.Physical Therapy, Dip.Pod.(Europe)<br />
                    Orthopaedic Foot Care & Footwear Specialist<br />
                </p>
            </div>

        </div>
    </div>

    <hr class="featurette-divider">





















    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
</body>
</html>